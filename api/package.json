{
  "name": "code-delivery-product-api",
  "version": "1.0.0",
  "description": "RESTful API, designed to be used as a demo app for Code Delivery 101 training. Using NodeJS and KOA framework, typescript. TypeORM for SQL with class-validators. Middlewares JWT, CORS, Winston Logger. Swagger API docs",
  "main": "dist/server.js",
  "scripts": {
    "watch-server": "nodemon --watch src -e ts,tsx --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve": "node dist/server.js",
    "build": "npm run tslint && npm run build-ts",
    "start": "npm run serve",
    "test:integration": "newman run integrationtests/node-koa-typescript.postman_collection.json -e integrationtests/heroku-dev.postman_environment.json",
    "test:load": "locust --no-web -c 50 -r 10 -f loadtests/locustfile.py --run-time 1m --host=https://node-typescript-koa-rest.herokuapp.com",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "deploy": "node ./tools/deploy",
    "deploy:docker-publish": "node ./tools/deploy/docker-publish"
  },
  "engines": {
    "node": "10.x.x",
    "npm": "6.x.x"
  },
  "author": "Sergii Sinienok",
  "license": "MIT",
  "homepage": "https://github.com/dazmodel/code-delivery#readme",
  "keywords": [
    "typescript",
    "koa",
    "koa2",
    "jwt",
    "winston",
    "boilerplate",
    "typeORM",
    "class-validator",
    "helmet",
    "sql",
    "api rest",
    "heroku",
    "cors",
    "github actions"
  ],
  "repository": "github:javieraviles/node-typescript-koa-rest",
  "contributors": [
    {
      "name": "Javier Aviles",
      "homepage": "https://github.com/javieraviles/node-typescript-koa-rest#readme"
    }
  ],
  "devDependencies": {
    "@types/cron": "1.7.1",
    "@types/dotenv": "6.1.1",
    "@types/koa": "2.0.49",
    "@types/koa-bodyparser": "4.3.0",
    "@types/koa-helmet": "3.1.2",
    "@types/koa-jwt": "3.3.0",
    "@types/koa-router": "7.0.42",
    "@types/koa__cors": "2.2.3",
    "@types/node": "12.0.12",
    "@types/shelljs": "0.8.0",
    "nodemon": "1.19.1",
    "shelljs": "0.8.2",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.18.0",
    "typescript": "3.5.2",
    "yamljs": "0.2.10",
    "aws-sdk": "2.7.15",
    "lodash": "4.17.4",
    "serverless": "1.36.3"
  },
  "dependencies": {
    "@koa/cors": "3.0.0",
    "class-validator": "0.9.1",
    "cron": "1.7.2",
    "dotenv": "8.0.0",
    "koa": "2.7.0",
    "koa-bodyparser": "4.2.1",
    "koa-helmet": "4.2.0",
    "koa-jwt": "3.3.2",
    "koa-router": "7.4.0",
    "koa-swagger-decorator": "1.5.16",
    "pg": "7.4.3",
    "pg-connection-string": "2.0.0",
    "reflect-metadata": "0.1.12",
    "typeorm": "0.2.25",
    "winston": "3.2.1",
    "moment": "2.24.0"
  }
}
